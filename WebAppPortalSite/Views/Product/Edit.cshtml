@model ProductViewModel

@{
    ViewData["Title"] = "Add Product";
}



<div class="body-content">
    <div class="card shadow-sm border-0 rounded-4">
        <form asp-action="Edit" asp-controller="Product" method="post">
            <div class="card-header bg-light text-dark">
                <h4>Edit Product</h4>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @await Html.PartialAsync("_AddEdit.cshtml")
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

</div>



@section Scripts {
    <script src="~/js/Product/add-edit.js" asp-append-version="true"></script>
    <!-- Validation scripts -->
    <partial name="_ValidationScriptsPartial" />
}


