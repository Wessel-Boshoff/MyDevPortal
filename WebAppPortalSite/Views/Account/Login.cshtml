@model LoginUserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutAlt";
}

<div class="d-flex justify-content-center align-items-center" style="margin-top: 5rem">
    <div class="card shadow-lg border-0 rounded-4" style="width: 400px;">
        <form asp-action="Login">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h4 class="mb-0">
                    <i class="fa fa-sign-in-alt me-2"></i> Login
                </h4>
            </div>
            <div class="card-body p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer text-center bg-white border-0 pb-4">
                <input type="submit" value="Login" class="btn btn-primary w-100" />
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary w-100 mt-2">
                    <i class="fa fa-user me-1"></i> Create Account
                </a>
                <a asp-controller="Account" asp-action="SetPassword" class="btn btn-outline-secondary w-100 mt-2">
                    <i class="fa fa-key me-1"></i> Set Your Password
                </a>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
