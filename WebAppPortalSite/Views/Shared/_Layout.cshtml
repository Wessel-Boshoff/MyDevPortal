@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/WebAppPortalSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-gradient shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-4 text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid-1x2-fill me-2"></i> WebApp Portal
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>

                        @if ((await AuthorizationService.AuthorizeAsync(User, "Admin")).Succeeded)
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-area="" asp-controller="User" asp-action="Index">
                                    <i class="fas fa-users me-1"></i> Users
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-box-open me-1"></i> Products
                            </a>
                        </li>
                    </ul>


                    @await Component.InvokeAsync("UserGreeting")

             
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
