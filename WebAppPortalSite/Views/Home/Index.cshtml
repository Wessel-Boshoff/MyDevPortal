@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid py-4">
    <div class="row g-4">

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 text-center h-100">
                <div class="card-body">
                    <h6 class="text-muted">Total Users</h6>
                    <h2 class="fw-bold" id="totalUsers">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 text-center h-100">
                <div class="card-body">
                    <h6 class="text-muted">Active Users</h6>
                    <h2 class="fw-bold text-success" id="totalActiveUsers">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 text-center h-100">
                <div class="card-body">
                    <h6 class="text-muted">Total Products</h6>
                    <h2 class="fw-bold text-primary" id="totalProducts">0</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 text-center h-100">
                <div class="card-body">
                    <h6 class="text-muted">Top Weekly User</h6>
                    <h4 class="fw-bold text-warning" id="topWeeklyUser">-</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5 align-items-stretch">
        <div class="col-4 d-flex">
            <div class="card shadow-sm border-0 rounded-4 w-100 h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="mb-3">User Activity Overview</h5>
                    <canvas id="userChart" class="flex-grow-1"></canvas>
                </div>
            </div>
        </div>
        <div class="col-8 d-flex">
            <div class="card shadow-sm border-0 rounded-4 w-100 h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="mb-3">Sales</h5>
                    <canvas id="salesChart" class="flex-grow-1"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/Home/index.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

