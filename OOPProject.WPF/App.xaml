<Application x:Class="OOPProject.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OOPProject.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


        <Style x:Key="PanelDefault" TargetType="{x:Type Grid}">
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

        <Style x:Key="PanelDefaultHeadingLabel" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#087799"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
        </Style>

        <Style x:Key="ApplictionHeadingLabel" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#087799"></Setter>
            <Setter Property="Padding" Value="5,12,0,12"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>


        <Style x:Key="PanelDefaultBodyContainer" TargetType="{x:Type Border}">
            <Setter Property="BorderBrush" Value="#087799"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
        </Style>

        <Style x:Key="ButtonBase" TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="MinHeight" Value="27"></Setter>
            <Setter Property="MinWidth" Value="50"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderBrush" Value="Silver"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>

        </Style>

        <Style BasedOn="{StaticResource ButtonBase}" x:Key="ButtonDefault" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFAFAFA" Offset="0"/>
                        <GradientStop Color="#FFF0F0F0" Offset="0.5"/>
                        <GradientStop Color="#FFFAFAFA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF616161"></Setter>
            <Setter Property="Foreground" Value="#FF464646"></Setter>
            <Setter Property="Template" Value="{DynamicResource ButtonDefaultControlTemplate}"/>
        </Style>

        <ControlTemplate x:Key="ButtonDefaultControlTemplate" TargetType="{x:Type ButtonBase}">
            <Border CornerRadius="2" x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" TargetName="border">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFAFAFA" Offset="0"/>
                                <GradientStop Color="#FFE6E6E6" Offset="0.5"/>
                                <GradientStop Color="#FFFAFAFA" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" TargetName="border" Value="#FF616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" TargetName="border">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="GhostWhite" Offset="0"/>
                                <GradientStop Color="Gainsboro" Offset="0.5"/>
                                <GradientStop Color="GhostWhite" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" TargetName="border">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Gray" Offset="1"/>
                                <GradientStop Color="DarkGray" Offset="1"/>
                                <GradientStop Color="Gray" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                    <Setter Property="Background" TargetName="border" Value="#FFB6B6B6"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="white"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" TargetName="border" Value="#FFC5C5C5"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="Black"/>
                    <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="#FFECE8E8"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Application.Resources>
</Application>
