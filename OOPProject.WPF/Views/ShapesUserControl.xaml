<UserControl x:Class="OOPProject.WPF.Views.ShapesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOPProject.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="250px"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Style="{StaticResource PanelDefault}">
            <Border Style="{StaticResource PanelDefaultBodyContainer}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Margin="10,10,0,0" FontSize="48" Content="{Binding ShapeType}"></Label>
                    <Image Grid.Row="1" Source="{Binding ImagePath}"></Image>
                </Grid>

            </Border>
        </Grid>

        <DockPanel Grid.Column="1">
            <Grid MinHeight="300">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Style="{StaticResource PanelDefault}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource PanelDefaultHeadingLabel}" Content="Calculation"></Label>
                    <Border Style="{StaticResource PanelDefaultBodyContainer}" Grid.Row="1">
                        <ComboBox Margin="5" ItemsSource="{Binding CalculationTypes, Mode=OneWay}" SelectedValuePath="Value" DisplayMemberPath="Text" SelectedValue="{Binding CalculationType}" SelectionChanged="ComboBox_SelectionChanged"></ComboBox>
                    </Border>
                </Grid>


                <Grid Style="{StaticResource PanelDefault}" VerticalAlignment="Center" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource PanelDefaultHeadingLabel}" Content="Inputs"></Label>
                    <Border Style="{StaticResource PanelDefaultBodyContainer}" Grid.Row="1">
                        <StackPanel>
                            <StackPanel   Name="stkInputs">
                            </StackPanel>
                            <Button Style="{StaticResource ButtonDefault}" Margin="5" Click="Button_Click">Calculate</Button>
                        </StackPanel>
                    </Border>
                </Grid>


                <Grid Style="{StaticResource PanelDefault}" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource PanelDefaultHeadingLabel}" Content="Result"></Label>
                    <Border Style="{StaticResource PanelDefaultBodyContainer}" Grid.Row="1">
                        <StackPanel Grid.Row="1">
                            <TextBox Margin="5" Text="{Binding ResultDisplay, Mode=OneWay}" Name="txtResult" IsReadOnly="True"></TextBox>
                        </StackPanel>
                    </Border>
                </Grid>


            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
