<UserControl x:Class="OOPProject.WPF.Views.ImageOptionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOPProject.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Style="{StaticResource ButtonDefault}" Margin="5" Click="Button_Click">
        <Grid Width="150" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Image Margin="5" Stretch="Fill" Source="{Binding Bitmap}"></Image>

            <TextBlock Padding="5" Text="{Binding Heading}" Grid.Row="1"></TextBlock>
        </Grid>
    </Button>
</UserControl>
